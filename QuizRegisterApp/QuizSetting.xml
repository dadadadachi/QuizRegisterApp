<?xml version="1.0" encoding="utf-8"?>
<Setting>
    <Define>
        <Column key="Difficulty">
            <Title>難易度</Title>
            <InputType>radio</InputType>
            <Options>1;2;3;4;5,Easy;Normal;Hard</Options>
        </Column>
        <Column key="ProblemSentence">
            <Title>問題文</Title>
            <InputType>textarea</InputType>
        </Column>
        <Column key="Options">
            <Title>選択肢</Title>
            <InputType>textarea</InputType>
        </Column>
        <Column key="EffectImage">
            <Title>エフェクト画像</Title>
            <InputType>textbox</InputType>
        </Column>
        <Column key="CharPanel">
            <Title>文字パネル</Title>
            <InputType>charbox10</InputType>
        </Column>
        <Column key="Hint">
            <Title>ヒント</Title>
            <InputType>textarea</InputType>
        </Column>
        <Column key="Rate">
            <Title>正答率</Title>
            <InputType>textbox</InputType>
        </Column>
        <Column key="CorrectAnswer">
            <Title>答え</Title>
            <InputType>textbox</InputType>
        </Column>
        <Column key="Remarks">
            <Title>備考</Title>
            <InputType>textarea</InputType>
        </Column>
    </Define>
    <Template>
        <Genre name="アニメ＆ゲーム">
            <Format name="順番当て">
                <Difficulty>True</Difficulty>
                <ProblemSentence>True</ProblemSentence>
                <Options>True</Options>
                <CorrectAnswer>True</CorrectAnswer>
                <Remarks>True</Remarks>
            </Format>
        </Genre>
        <Genre name="スポーツ">
            <Format name="並べ替え">
                <Difficulty>True</Difficulty>
                <ProblemSentence>True</ProblemSentence>
                <Options>True</Options>
                <CorrectAnswer>True</CorrectAnswer>
                <Remarks>True</Remarks>
