        </Genre>
        <Genre name="ライフスタイル">
            <Format name="エフェクト">
                <Difficulty>True</Difficulty>
                <ProblemSentence>True</ProblemSentence>
                <EffectImage>True</EffectImage>
                <Rate>True</Rate>
                <CorrectAnswer>True</CorrectAnswer>
                <Remarks>True</Remarks>
            </Format>
        </Genre>
        <Genre name="社会">
            <Format name="文字パネル">
                <Difficulty>True</Difficulty>
                <ProblemSentence>True</ProblemSentence>
                <CharPanel>True</CharPanel>
